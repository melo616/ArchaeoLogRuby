<%= render @image %>

<% if policy(@image).edit? && policy(@image).destroy? %>
  <div class="btn btn-toolbar">
    <%= link_to "Edit this image", edit_image_path(@image), class: "btn btn-outline-secondary button-margin" %>
    <%= button_to "Destroy this image", image_path(@image), method: :delete, class: "btn btn-outline-danger" %>
  </div>
<% end %>
