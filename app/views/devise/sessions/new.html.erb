<div style="position: relative; width: 100%; max-height: 350px;">
  <%= image_tag("ruins.png", alt: "ruins banner", style: "width: 100%; max-height: 400px; object-fit: cover;", class: "img-responsive") %>
  <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); color: white; text-align: center;">
    <p class="display-1">ArchaeoLog</p>
    <p>Digital Field Log for Archaeologists</p>
  </div>
</div>

<div style="height: 200px; background-color: #800000;"></div>
<div class="row mt-5">
  <div class="col-4 d-flex align-items-center justify-content-center">
    <div>
      <h2>Log in</h2>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email" } %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
  <div class="col-4 text-center d-flex align-items-center justify-content-center">
    <h2><%= link_to "About", about_path, style: "color: #dc3545" %></h2>
  </div>
  <div class="col-4 d-flex align-items-center justify-content-center">
    <h2>Some thing</h2>
  </div>
</div>
