<div class="container">
  <h1>Your Pending Invitations</h1>

  <div id="invitations">
    <div>
    <h3>Invitations Awaiting Your Action</h3>
      <% if @pending_received_invitations.count > 0 %>
        <% @pending_received_invitations.each do |invitation| %>
          <%= render invitation %>
          <%= button_to "Accept", accept_invitation_path(invitation) %>
        <% end %>
      <% else %>
        <p>You have no pending invitations.</p>
      <% end %>
    </div>
    <hr>
    <div>
    <h3>Your Sent Invitations</h3>
      <% @sent_invitations.each do |invitation| %>
        <%= render invitation %>
      <% end %>
    </div>
  </div>
</div>
