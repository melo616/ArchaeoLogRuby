<h1>Announcements</h1>

<%= link_to "Back to dig", dig_path(@dig) %> |
<%= link_to "New announcement", new_dig_announcement_path(@dig) %>
<hr>

<div id="announcements">
  <% @announcements.each do |announcement| %>
    <div class="d-flex justify-content-between align-items-center row">
      <h3 class="col-md-3"><%= link_to "#{announcement.title}", dig_announcement_path(@dig, announcement) %></h3>
      <p class="col-md-3"><%= truncate(announcement.body, :length => 50, :separator => ' ') %></p>
      <% if announcement.poster == current_user %>
        <p class="col-md-3">Posted on <%= announcement.created_at.strftime('%b %d, %Y') %> by you</p>
      <% else %>
        <p class="col-md-3">Posted on <%= announcement.created_at.strftime('%b %d, %Y') %> by <%= announcement.poster.first_name %> <%= announcement.poster.last_name %></p>
      <% end %>
    </div>
    <hr>
  <% end %>
</div>
