<%= form_with(model: [@dig, announcement]) do |form| %>
  <% if announcement.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(announcement.errors.count, "error") %> prohibited this announcement from being saved:</h2>

      <ul>
        <% announcement.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div>
    <%= form.label :body, style: "display: block" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <div>
    <%= form.hidden_field :poster_id, value: current_user.id %>
