<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Welcome, <%= current_user.first_name %>!</h1>
    <%= link_to "Invitations", invitations_path %>
  </div>
  <div style="padding: 20px; text-align: center;">
    <h3><%= link_to "Create a new dig", new_dig_path, class: "btn btn-outline-secondary btn-block col-8", style: "width: 50%;" %></h3>
  </div>
  <div style="text-align: center" class="mb-4">
    <h3>Digs You Participate In</h3>
    <div id="digs" class="d-flex justify-content-center flex-wrap">
      <% if @digs.count > 0 %>
        <% @digs.order(end_date: :desc).each do |dig| %>
        <div class="card" style="width: 50%; margin: 10px;">
          <div class="card-body">
            <h4 class="card-title"><%= dig.name %></h4>
            <p class="card-text"><%= dig.location %></p>
            <p>
              <%= link_to "Show this dig", dig %>
            </p>
          </div>
        </div>
        <% end %>
      <% else %>
        <p>You're not participating in any digs. Create or join a dig to get started!</p>
      <% end %>
      </div>
  </div>
</div>
