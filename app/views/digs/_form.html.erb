    <%= form.label :end_date, style: "display: block" %>
    <%= form.date_field :end_date %>
  </div>

  <div>
    <%= form.label :location, style: "display: block" %>
    <%= form.text_field :location %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div>
    <%= form.label :season, style: "display: block" %>
    <%= form.text_field :season %>
  </div>

  <div>
    <%= form.label :artifact_count, style: "display: block" %>
    <%= form.number_field :artifact_count %>
  </div>

  <div>
    <%= form.hidden_field :creator_id, value: current_user.id %>
  </div>

  <div>
    <%= form.label :primary_investigator_email, style: "display: block" %>
