<div id="<%= dom_id artifact %>">
  <div class="row">
    <p class="col">
      <strong>Artifact ID:</strong>
      <%= artifact.id %>
    </p>

    <p class="col">
      <strong>Date found:</strong>
      <% if artifact.found_date %>
        <%= artifact.found_date.strftime("%b %d, %Y") %>
      <% end %>
    </p>
  </div>

  <div class="row">
    <p class="col">
      <strong>Category:</strong>
      <% if !artifact.category == nil %>
        <%= artifact.category.humanize %>
      <% end %>
    </p>

    <p class="col">
      <strong>Material:</strong>
      <%= artifact.material %>
    </p>
  </div>

  <div class="row">
    <p class="col">
      <strong>Weight:</strong>
      <%= artifact.weight %>
    </p>

    <p class="col">
      <strong>Mohs hardness:</strong>
      <%= artifact.mohs_hardness %>
    </p>
  </div>

  <div class="row">
    <p class="col">
      <strong>Site:</strong>
      <%= artifact.site %>
    </p>

    <p class="col">
      <strong>Posted by:</strong>
      <% if artifact.poster == current_user %>
        You on <%= artifact.created_at.strftime("%b %d, %Y") %>
      <% else %>
        <%= artifact.poster.first_name %> <%= artifact.poster.last_name %> on <%= artifact.created_at.strftime("%b %d, %Y") %>
      <% end %>
    </p>
  </div>

  <div class="row">
    <p>
      <strong>Description:</strong>
      <%= artifact.description %>
    </p>
  </div>

</div>
