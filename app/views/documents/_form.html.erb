<%= form_with(model: [@dig, document]) do |form| %>
  <% if document.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(document.errors.count, "error") %> prohibited this document from being saved:</h2>

      <ul>
        <% document.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

 <div>
    <%= form.label :author, style: "display: block" %>
    <%= form.text_field :author %>
  </div>

  <div>
    <%= form.file_field :document_file %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes %>
  </div>

  <div>
    <%= form.label :allowed_roles, style: "display: block" %>
    <%= form.check_box :allowed_roles %>
  </div>

  <div>
    <%= form.hidden_field :dig_id, value: @dig.id %>
  </div>

  <div>
    <%= form.submit class: "btn btn-outline-secondary"%>
  </div>
<% end %>

